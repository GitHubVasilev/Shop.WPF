<Application x:Class="Shop.WPF.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:lctr="clr-namespace:Shop.WPF.Infrastructure"
             StartupUri="View/MainWindow.xaml">
    <Application.Resources>
        <ResourceDictionary>
            <lctr:ViewModelLocator x:Key="locator"/>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source=".\View\Styles\BaseTextBlock.xaml"/>
                <ResourceDictionary Source=".\View\Styles\ErrorText.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
        
    </Application.Resources>
</Application>
